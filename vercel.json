{
    "version": 2,
    "builds": [
      {
        "src": "backend/index.js",
        "use": "@vercel/node"
      },
      {
        "src": "frontend/package.json",
        "use": "@vercel/react-app"
      }
    ],
    "routes": [
      { "src": "/api/send-email", "dest": "backend/index.js" },
      { "src": "/(.*)", "dest": "/frontend/public/$1" }
    ],
    "functions": {
      "api/send-email": {
        "handler": "backend/index.js",
        "runtime": "nodejs18.x" // Or your preferred Node.js runtime on Vercel
      }
    }
  }