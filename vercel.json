{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/react-app",
      "dest": "frontend" 
    },
    {
      "src": "backend/index.js",
      "use": "@vercel/node",
      "dest": "api" 
    }
  ],
  "routes": [
    { "src": "/api/archive-prompts", "dest": "api/index.js" },
    { "src": "/api/send-email", "dest": "api/index.js" },
    { "src": "/(.*)", "dest": "frontend/public/$1" }
  ]
}